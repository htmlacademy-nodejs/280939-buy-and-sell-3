include ../../common/common.pug

+layout()
  +html()
    +body()
      +header({
        inputHref: 'sign-up.html',
        query,
      })
      main.page-content
        if data.searchResults && data.searchResults.length
          +tickets-list({
            tickets: data.searchResults,
            categoriesListData: data.categoriesListData,
            listType: 'search-results',
          })
        else
          section.search-results
            h1.visually-hidden Результаты поиска
            .search-results__wrapper
              .search-results__message
                p
                  | Не найдено
                  br
                  | ни одной публикации
        +tickets-list({
          title: 'Самое свежее',
          titleHidden: 'Самые новые предложения',
          tickets: data.newTicketsListData,
          categoriesListData: data.categoriesListData,
          showMoreItemsCount: 25,
        })
