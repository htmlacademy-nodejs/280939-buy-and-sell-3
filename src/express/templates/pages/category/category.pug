include ../../common/common.pug

+layout()
  +html()
    +body()
      +header({
        logged: true,
        currentUser,
        inputHref: 'ticket-form.html',
      })
      main.page-content
        +categories-list({
          titleHidden: 'Сервис объявлений "Куплю - продам"',
          categories: data.categoriesListData,
          activeIndex: 2,
        })
        +tickets-list({
          title: 'Электроника',
          titleHidden: 'Предложения из категории электроника',
          tickets: data.categoryTicketsListData,
          categoriesListData: data.categoriesListData,
          pagination: true,
          categoryTicketsCount: 62,
        })
